{
    "env": {
        "node": true,
        "es2021": true,
        "browser": true,
        "commonjs": true
    },
    "parser": "@typescript-eslint/parser",
    "extends": "standard-with-typescript",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module",
        "project": ["./tsconfig.json", "./tsconfig.eslint.json"]
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "no-new": "off",
        "@typescript-eslint/naming-convention": "off"
    }
}
